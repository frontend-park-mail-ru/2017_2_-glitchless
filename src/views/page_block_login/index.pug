include ../_modal/index

+modal('Sign in')
    form#login-form.login-form(action='')
        -
            var input_fields = [{type: 'text', name:'login', placeholder:'Nickname'}, {type: 'password', name:'password', placeholder:'Password'}];
        each field in input_fields
            input.login-form__field(type=field['type'], name=field['name'], placeholder=field['placeholder'])
            //- .field_errors(id='login-form__'+field['name'], style='visibility: hidden;') #{field['placeholder']} errors placeholder
        p
            input.login-form__button(type='submit')
        p
            | Don't have an account? 
            a(href='#signup') Sign up